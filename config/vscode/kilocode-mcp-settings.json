{
  "mcpServers": {
    "context7": {
      "command": "nix",
      "args": ["shell", "nixpkgs#nodejs", "--command", "npx", "--", "@upstash/context7-mcp"]
    },
    "fetch": {
      "command": "nix",
      "args": ["shell", "nixpkgs#uv", "--command", "uvx", "--", "mcp-server-fetch"]
    },
    "sequentialthinking": {
      "command": "nix",
      "args": ["shell", "nixpkgs#nodejs", "--command", "npx", "--", "mcp-sequential-thinking"],
      "alwaysAllow": ["sequentialthinking"]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "alwaysAllow": ["get_me"]
    },
    "memory": {
      "command": "nix",
      "args": [
        "shell",
        "nixpkgs#nodejs",
        "--command",
        "sh",
        "-c",
        "mkdir -p \"${PWD}/.vscode/mcp\" && MEMORY_FILE_PATH=\"${PWD}/.vscode/mcp/memory.json\" npx -y @modelcontextprotocol/server-memory"
      ],
      "alwaysAllow": [
        "read_graph",
        "search_nodes",
        "open_nodes",
        "create_entities",
        "create_relations",
        "add_observations"
      ]
    }
  }
}
