{
  "mcpServers": {
    "context7": {
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ],
      "args": [
        "shell",
        "nixpkgs#nodejs",
        "--command",
        "npx",
        "--",
        "@upstash/context7-mcp"
      ],
      "command": "nix"
    },
    "fetch": {
      "args": [
        "shell",
        "nixpkgs#uv",
        "--command",
        "uvx",
        "--",
        "mcp-server-fetch"
      ],
      "command": "nix"
    },
    "github": {
      "args": [
        "run",
        "github:NixOS/nixpkgs/nixos-unstable#github-mcp-server",
        "--",
        "stdio",
        "--read-only"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_MCP_TOKEN}"
      },
      "command": "nix",
      "alwaysAllow": [
        "get_me"
      ]
    }
  }
}
