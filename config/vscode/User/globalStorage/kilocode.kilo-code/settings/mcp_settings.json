{
  "mcpServers": {
    "context7": {
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ],
      "args": [
        "shell",
        "nixpkgs#nodejs",
        "--command",
        "npx",
        "--",
        "@upstash/context7-mcp"
      ],
      "command": "nix"
    },
    "fetch": {
      "args": [],
      "command": "fetch-mcp-wrapper"
    },
    "github": {
      "args": [],
      "command": "github-mcp-wrapper",
      "alwaysAllow": [
        "get_me",
        "list_workflow_jobs",
        "get_job_logs",
        "get_workflow_run"
      ]
    }
  }
}
