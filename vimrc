set nocompatible
set noexrc
set background=dark
set cpoptions=Be
colo desert

syntax on

filetype plugin indent on
set backspace=indent,eol,start
set backup
set noerrorbells

set incsearch
set ruler
set novisualbell
set report=0
set scrolloff=5
set showcmd
set showmatch

set expandtab
set ignorecase
set shiftround
set smartcase
set shiftwidth=2
set softtabstop=2
set tabstop=2

call pathogen#infect()

